{
  "Logging": {
    "LogPath": "%LOG_PATH%",
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "%LOG_PATH%/log-.json",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level}] {Message}{NewLine}{Exception}",
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName"
    ]
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "server=localhost;port=3306;database=LibraryDb;user=root;password=root;"
  },
  "JwtSettings": {
    "SecretKey": "your-production-secret-key-at-least-32-characters-keep-it-safe",
    "Issuer": "https://localhost:8888",
    "Audience": "https://localhost:8000"
  },
  "Cors": {
    "AllowOrigins": [
      "http://localhost:8000",
      "http://localhost:5173",
      "http://localhost:7000"
    ]
  }
}
